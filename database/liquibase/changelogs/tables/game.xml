<?xml version="1.0" encoding="UTF-8"?>   
<databaseChangeLog
   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:pro="http://www.liquibase.org/xml/ns/pro"
   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
      http://www.liquibase.org/xml/ns/pro 
      http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">
   <changeSet author="stankowd" id="1">
      <createTable tableName="game" schemaName="games">
        <column name="id" type="UUID">
            <constraints nullable="false"/>
        </column>
        <column name="author" type="VARCHAR(255)"/>
        <column name="max_players" type="INTEGER"/>
        <column name="name" type="VARCHAR(255)"/>
      </createTable>
      <addPrimaryKey schemaName="games" tableName="game" columnNames="id" constraintName="game_primary_key_constraint"/>
      <createTable tableName="play" schemaName="games">
        <column name="id" type="UUID">
            <constraints nullable="false"/>
        </column>
        <column name="event_id" type="UUID"/>
        <column name="game_id" type="UUID"/>
      </createTable>
      <addPrimaryKey schemaName="games" tableName="play" columnNames="id" constraintName="play_primary_key_constraint"/>
      <createTable tableName="player" schemaName="games">
        <column name="id" type="UUID">
            <constraints nullable="false"/>
        </column>
        <column name="name" type="VARCHAR(255)"/>
        <column name="surname" type="VARCHAR(255)"/>
        <column name="alias" type="VARCHAR(255)"/>
        <column name="rank" type="INTEGER"/>
        <column name="user_id" type="UUID"/>
        <column name="play_id" type="UUID"/>
      </createTable>
      <addPrimaryKey schemaName="games" tableName="player" columnNames="id" constraintName="player_primary_key_constraint"/>
   </changeSet>
</databaseChangeLog>